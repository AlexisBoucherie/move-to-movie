{% extends 'layout.html.twig' %}

{% block title %}Move to movie | Homepage{% endblock %}

{% block content %}
    <div class="homepage-container">

        {# full screen opening #}
        <div class="random-carousel">
            <div class="site-name">
                <h1>MOVE TO MOVIE</h1>
                <p>Stop watching, start travelling</p>
            </div>
            <p class="catchphrase">Visit the filming locations of your favorite movies</p>
        </div>

        {# movie cards #}
        <div class="homepage-movie-cards">
            <p>Choose your next adventure!</p>
            {% for movie in movies %}
                <div class="movie-card">
                    <a href="/location?id={{ movie.id }}">
                        {{ dump(movie.id) }}
                        <img src="{{ movie.img }}" alt="{{ movie.name }} cover">
                    </a>
                    <h2 class="movie-title">{{ movie.name }}</h2>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
